<div class="col-12 col-md-6 mb-4">
  <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}">
    <div class="card hoverable h-100 project-card">
      <div class="row g-0 align-items-stretch">
        {% if project.img %}
          <div class="col-5">
            <div class="thumb">
              {% include figure.liquid
                 loading="eager"
                 path=project.img
                 sizes="(min-width: 768px) 260px, 50vw"
                 alt="project thumbnail"
                 class="thumb__img" %}
            </div>
          </div>
        {% endif %}
        <div class="{% if project.img %}col-7{% else %}col-12{% endif %}">
          <div class="card-body">
            <h2 class="card-title mb-2">{{ project.title }}</h2>
            <p class="card-text clamp-3">{{ project.description }}</p>

            <div class="row ml-1 mr-1 p-0">
              {% if project.github %}
                <div class="github-icon">
                  <div class="icon" data-toggle="tooltip" title="Code Repository">
                    <a href="{{ project.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
                  </div>
                  {% if project.github_stars %}
                    <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                      <i class="fa-solid fa-star"></i>
                      <span id="{{ project.github_stars }}-stars"></span>
                    </span>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
